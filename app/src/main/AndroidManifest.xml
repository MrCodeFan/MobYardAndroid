<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobyardandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_first"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_first"
        android:supportsRtl="true"
        android:theme="@style/MobYardTheme">
        <activity android:name=".user.ProfileActivity"></activity>
        <activity android:name=".yard.YardInfoActivity" />
        <activity android:name=".yard.CreateYardActivity" />
        <activity android:name=".user.UserDashboardActivity" />
        <activity android:name=".yard.MainYardActivity" />
        <activity android:name=".load.OnboardingActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".load.StartLoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.StartActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".auth.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>