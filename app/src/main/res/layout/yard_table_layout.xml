<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_yard_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/yard_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/yard_pic_template"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/yard_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/brandon_grotesque_black"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/yards_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/yard_id"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="170dp"
            android:paddingLeft="10dp"
            android:text="@string/yards_id"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/yard_heading" />

        <TextView
            android:id="@+id/yard_desc"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/yards_title"
            app:layout_constraintTop_toBottomOf="@+id/yard_id" />

        <TextView
            android:id="@+id/yard_num"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="right"
            android:text="1"/>
    </LinearLayout>





</androidx.cardview.widget.CardView>